{erl_opts, [debug_info]}.
{deps, [
    {lager, {git, "https://github.com/erlang-lager/lager.git", {branch, "master"}}},
    {uart,  {git, "https://github.com/tonyrog/uart.git",       {branch, "master"}}}
]}.
{post_hooks, [
    {compile, "bash -c 'echo \"WARNING: Workaround for building a driver.\"; cd _build/default/lib/uart && rebar get-deps && rebar compile'"}
]}.
